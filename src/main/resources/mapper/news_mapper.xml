<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.jobx_api.dao.NewsDao">

    <select id="selectNews" resultType="com.example.jobx_api.dto.NewsDto">
        SELECT
            n.*,
            s.name AS sourceName
        FROM
            news n
        JOIN source s ON n.source_id = s.id
        LIMIT 8

    </select>

</mapper>
